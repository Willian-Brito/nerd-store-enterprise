@using NSE.WebApp.MVC.Extensions.Helpers
@model TransactionViewModel

@{
    ViewData["Title"] = "Confirm your order";
}

<section class="padding-y">
    <div class="container">

        <vc:Summary></vc:Summary>

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="tracking-wrap">
                    <div class="step active">
                        <span class="icon">
                            <i class="fa fa-location-arrow"></i>
                        </span>
                        <span class="text"> Address</span>
                    </div>
                    <div class="step">
                        <span class="icon">
                            <i class="fa fa-credit-card"></i>
                        </span>
                        <span class="text"> Payment </span>
                    </div>
                    <div class="step">
                        <span class="icon">
                            <i class="fa fa-check-square"></i>
                        </span>
                        <span class="text"> Confirm</span>
                    </div>
                </div>
                <article class="card-body">
                    <header class="mb-4">
                        <h4 class="card-title">Your Order</h4>
                    </header>
                    <div class="row">
                        @foreach (var item in Model.Items)
                        {
                            <div class="col-md-6">
                                <figure class="itemside  mb-3">
                                    <div class="aside">
                                        <img src="~/images/catalog/@item.Image" alt="@item.Name" class="border img-xs">
                                    </div>
                                    <figcaption class="info">
                                        <p>
                                            <b>@item.Name</b>
                                        </p>
                                        <span>@(this.UnitByProductAmount(item.Quantity, item.Price)) </span>
                                    </figcaption>
                                </figure>
                            </div>
                        }
                    </div>
                </article>

                <partial name="_FinanceSummary" model="Model"/>

                <div class="card-body border-top">
                    <partial name="_Address" model="Model"/>
                </div>
                <div class="card-body border-top" style="display: flex; justify-content: space-between;">
                    <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-light"> 
                        <i class="fa fa-chevron-left"></i> Go back to Shopping Cart 
                    </a>
                    @if (Model.Address != null)
                    {
                        <div class="text-left">
                            <a asp-controller="Order" asp-action="Payment" class="btn btn-primary float-md-right">
                                Payment <i class="fa fa-chevron-right"></i> 
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</section>

<partial name="_NewAddress"/>

@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $(document).ready(function () {
            BuscaCep();
        });
    </script>

}