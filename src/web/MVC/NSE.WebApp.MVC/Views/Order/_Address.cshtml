@model TransactionViewModel

<h4 class="card-title">Address</h4>
@{
    if (Model.Address == null)
    {
        <div class="text-left">
            <a href="javascript:void(0)" class="btn btn-primary float-md-left" data-bs-toggle="modal"
               data-bs-target="#addressModal"> <i class="fa fa-location-arrow"></i> Add Address</a>
        </div>
    }
    else
    {
        <div class="row align-items-center">
            <div class="col">
                @Model.Address.ToString()
            </div>
            <div class="col-auto text-end">
                <a href="javascript:void(0)" class="btn btn-primary"> 
                    <i class="fa fa-location-arrow"></i> Update Address
                </a>
            </div>
        </div>
    }
}